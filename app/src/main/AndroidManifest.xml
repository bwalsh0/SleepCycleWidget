<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bryanwalsh.sleepcyclewidget">

    <uses-permission android:name="android.permission.REQUEST_COMPANION_RUN_IN_BACKGROUND" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.bryanwalsh.sleepcyclewidget.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.bryanwalsh.sleepcyclewidget.SleepWidgetLIGHT">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.EXTRA_APPWIDGET_IDS" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sleep_widget_light_info" />
        </receiver>

        <activity
            android:name="com.bryanwalsh.sleepcyclewidget.SleepWidgetLIGHTConfigureActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.bryanwalsh.sleepcyclewidget.WidgetConfigurePreferences"
            android:label="@string/title_activity_widget_configure_preferences"
            android:theme="@style/PreferenceScreen"></activity>
        <activity android:name="com.bryanwalsh.sleepcyclewidget.AboutActivity"
            android:parentActivityName=".WidgetConfigurePreferences" >
        </activity>
        <activity android:name="com.bryanwalsh.sleepcyclewidget.PurchaseActivity"/>
    </application>

</manifest>